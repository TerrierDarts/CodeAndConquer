---
interface Props {
    url: string;
    image: string;
    title: string;
    date: string;
    author: string;
}

const { url, image, title, date, author } = Astro.props;
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img
                class="card__img"
                width="226"
                height="127"
                src={image}
                alt="PostImage"
            />
            <h3 class="card__title">
                {title} </h3>
                <span class="badge badge--item">By: {author} </span></br>
                <span> {date} </span>
            </div>
        
    </a>
</li>
